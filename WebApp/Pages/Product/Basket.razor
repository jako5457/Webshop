@page "/Basket"
@inject ISyncLocalStorageService LocalStorage
<h3>Basket</h3>

@if (ShoppingBasket != null)
{
    <table class="table table-dark">
        <thead>
            <tr>
                <th scope="col">Name</th>
                <th scope="col">Price</th>
                <th scope="col">Amount</th>
                <th scope="col">Total</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var prod in ShoppingBasket.Products)
            {
                <tr>
                    <th scope="row">@prod.Name</th>
                    <td>@prod.Price</td>
                    <td>@prod.Amount</td>
                    <td>@(prod.Price * prod.Amount)</td>
                </tr>
            }
        </tbody>
    </table>
}

@code {

    public BasketModel ShoppingBasket { get; set; }

    protected override void OnInitialized()
    {
        @if (LocalStorage.ContainKey("Basket"))
        {
            ShoppingBasket = LocalStorage.GetItem<BasketModel>("Basket");
        }
        base.OnInitialized();
    }

}
